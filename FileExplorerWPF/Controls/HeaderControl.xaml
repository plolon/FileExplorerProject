<UserControl x:Class="FileExplorerWPF.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileExplorerWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="600">
    <Grid>
        <Button Content="Ico" Width="20" HorizontalAlignment="Left"></Button>
        <Button x:Name="FileName" Content="FileName" Width="150" HorizontalAlignment="Left" Margin="20,0,0,0" Click="FileName_Click"></Button>
        <Button x:Name="DateCreated" Content="Date Created" Width="140" HorizontalAlignment="Left" Margin="170,0,0,0" Click="DateCreated_Click"></Button>
        <Button x:Name="DateModified"  Content="Date Last Modified" Width="140" HorizontalAlignment="Left" Margin="310,0,0,0" Click="DateModified_Click"></Button>
        <Button x:Name="Type" Content="Type" Width="75" HorizontalAlignment="Left" Margin="450,0,0,0" Click="Type_Click"></Button>
        <Button x:Name="Size" Content="Size" Width="75" HorizontalAlignment="Left" Margin="525,0,0,0" Click="Size_Click"></Button>
    </Grid>
</UserControl>
